/**index.wxss**/
.container {
  height: 100%;
  width: 100%;
  position: absolute;
}

.swiper {
  height: 100%;
  width: 100%;
  z-index: -1;
  top: 0;
  left: 0;
}
.swiper-item {
  background-size: cover;
  background-position: center;
  height: 100%;
  width: 100%;
}
.text-wrap {
  position: absolute;
  width: 100%;
  z-index: 1;
  text-shadow: 2px 0 0 #fff, -2px 0 0 #fff, 0 2px 0 #fff, 0 -2px 0 #fff, 1px 1px #fff, -1px -1px 0 #fff, 1px -1px 0 #fff, -1px 1px 0 #fff;
}

.name {
  color: palevioletred;
  font-size: larger;
  font-weight: bold;
  padding: 20px 0 10px 0;
  text-align: center;
}
.time {
  color: palevioletred;
  text-align: center; 
}
.days {
  font-size: 40px;
  font-weight: bold;
}

.image {
  position: absolute;
  height: 30px;
  width: 30px;
  bottom: 10px;
  right: 10px;
}