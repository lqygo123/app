

.add {
  position: fixed;
  right: 20px;
  bottom: 20px;
  background-color: #ff629a;
  color: white;
  height: 40px;
  width: 40px;
  font-size: 30px;

  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  font-weight: bolder;
}

.has-diary {
  color: orange;
  position: relative;
}

.grid .has-diary::after {
  content: '';
  display: block;
  height: 4px;
  width: 4px;
  border-radius: 2px;
  background-color: red;
  position: absolute;
  bottom: -6px;
}

.timeline-item { 
  border-bottom: 1px solid #e6e6e6;
  padding: 10px 15px;
  margin-bottom: 20px;
}

.timeline-item > .content {
  margin-bottom: 6px;
}

.potolist-con {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.block {
  margin-right: 6px;
}

.timeline-photo > image {
  height: 300px;
  width: 300px;
}